<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCE0F8"
    tools:context=".HomePatient">

    <Button
        android:id="@+id/paramètres_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="10dp"
        android:text="Paramètres"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/devoirs_button"
        android:layout_width="185dp"
        android:layout_height="186dp"
        android:layout_marginTop="125dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="395dp"
        android:backgroundTint="#80A78ADC"
        android:text="Devoirs"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/dayActivities_button"
        android:layout_width="185dp"
        android:layout_height="186dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="395dp"
        android:backgroundTint="#80A78ADC"
        android:text="Routine du jour"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paramètres_button"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/humeur_button"
        android:layout_width="185dp"
        android:layout_height="186dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="184dp"
        android:backgroundTint="#80A78ADC"
        android:text="Humeur"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dayActivities_button"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/sommeil_button"
        android:layout_width="185dp"
        android:layout_height="186dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="184dp"
        android:backgroundTint="#80A78ADC"
        android:text="Sommeil"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dayActivities_button"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/calendrier_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="175dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="28dp"
        android:text="Calendrier"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/paramètres_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="103dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="103dp"
        android:layout_marginBottom="27dp"
        android:text="Ajouter un professionnel"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/humeur_button" />

</androidx.constraintlayout.widget.ConstraintLayout>