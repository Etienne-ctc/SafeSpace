<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCE0F8"
    tools:context=".SommeilPatient">

    <TextView
        android:id="@+id/sommeil_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="158dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="159dp"
        android:text="Sommeil"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/temps_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="154dp"
        android:text="Combien de temps avez-vous dormis ?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sommeil_textView" />

    <TextView
        android:id="@+id/qualite_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="154dp"
        android:text="Quelle était la qualité de votre sommeil ?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="303dp" />

    <SeekBar
        android:id="@+id/qualite_sommeil_seekBar"
        android:layout_width="325dp"
        android:layout_height="54dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="46dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView7"
        tools:scrollbarSize="10sp" />

    <EditText
        android:id="@+id/commentaire_sommeil_editTextText"
        android:layout_width="351dp"
        android:layout_height="88dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:hint="Commentaire :"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qualite_sommeil_seekBar" />

    <Button
        android:id="@+id/valider_sommeil_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="166dp"
        android:layout_marginBottom="17dp"
        android:text="Valider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/commentaire_sommeil_editTextText"
        app:layout_constraintVertical_bias="0.434" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="67dp"
        android:layout_height="82dp"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/qualite_textView"
        app:srcCompat="@drawable/_370_test_1670866795_removebg_preview_6_removebg_preview"
        tools:layout_editor_absoluteX="328dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="67dp"
        android:layout_height="82dp"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/qualite_textView"
        app:srcCompat="@drawable/_370_test_1670866795_removebg_preview_5_removebg_preview"
        tools:layout_editor_absoluteX="252dp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="67dp"
        android:layout_height="82dp"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/qualite_textView"
        app:srcCompat="@drawable/_370_test_1670866795_removebg_preview_4_removebg_preview"
        tools:layout_editor_absoluteX="172dp" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="67dp"
        android:layout_height="82dp"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/qualite_textView"
        app:srcCompat="@drawable/_370_test_1670866795_removebg_preview_3_removebg_preview"
        tools:layout_editor_absoluteX="91dp" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="67dp"
        android:layout_height="82dp"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/qualite_textView"
        app:srcCompat="@drawable/_370_test_1670866795_removebg_preview_2_removebg_preview"
        tools:layout_editor_absoluteX="16dp" />

    <SeekBar
        android:id="@+id/seekBar2"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="334dp"
        android:layout_height="30dp"
        android:layout_marginBottom="72dp"
        android:max="24"
        android:progress="3"
        app:layout_constraintBottom_toTopOf="@+id/qualite_textView"
        app:layout_constraintTop_toBottomOf="@+id/temps_textView"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="31dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="0h"
        app:layout_constraintBottom_toTopOf="@+id/seekBar2"
        tools:layout_editor_absoluteX="26dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="24h"
        app:layout_constraintBottom_toTopOf="@+id/seekBar2"
        tools:layout_editor_absoluteX="349dp" />

</androidx.constraintlayout.widget.ConstraintLayout>